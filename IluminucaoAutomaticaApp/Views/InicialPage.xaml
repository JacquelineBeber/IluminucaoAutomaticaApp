<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:componentes="clr-namespace:IluminucaoAutomaticaApp.Views.Componentes"
             x:Class="IluminucaoAutomaticaApp.Views.InicialPage"
             xmlns:local="clr-namespace:IluminucaoAutomaticaApp.ViewModels"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#1c1c1c">

    <ScrollView>
        <VerticalStackLayout Spacing="10">

            <!-- Cabeçalho -->
            <componentes:CabecalhoView />

            <!-- Lâmpada Principal -->
            <Frame Margin="40,5"
                   Padding="15"
                   BackgroundColor="#f5b4b4"
                   CornerRadius="10"
                   BorderColor="DarkRed"
                   MinimumHeightRequest="200">

                <VerticalStackLayout Spacing="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Text="{Binding LampadaPrincipal.Nome}"
                               FontAttributes="Bold"
                               FontSize="17"
                               TextColor="Black"/>

                        <Label Text="Ativa"
                               Grid.Column="1"
                               TextColor="Green"
                               FontAttributes="Bold"
                               FontSize="18"
                               VerticalOptions="Center"/>
                    </Grid>

                    <Label Text="{Binding LampadaPrincipal.Estado}"
                           FontSize="18"
                           TextColor="Black"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           Padding="0, 20"/>

                    <Grid ColumnSpacing="20" HorizontalOptions="Center" Padding="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Text="Ligar"
                                Grid.Column="0"
                                BackgroundColor="LightGreen"
                                TextColor="DarkGreen"
                                WidthRequest="90"
                                CornerRadius="40"
                                Command="{Binding LigarCommand}"
                                CommandParameter="{Binding LampadaPrincipal}"/>

                        <Button Text="Desligar"
                                Grid.Column="1"
                                BackgroundColor="LightCoral"
                                TextColor="DarkRed"
                                WidthRequest="90"
                                CornerRadius="40"
                                Command="{Binding DesligarCommand}"
                                CommandParameter="{Binding LampadaPrincipal}"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Outras Lâmpadas -->
            <CollectionView ItemsSource="{Binding OutrasLampadas}"
                            Margin="30,0"
                            HorizontalOptions="Fill">

                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#2c2c2c"
                               CornerRadius="10"
                               BorderColor="Gray"
                               Padding="10"
                               Margin="5">

                            <VerticalStackLayout Spacing="5" Padding="10">
                                <Label Text="{Binding Nome}"
                                       TextColor="White"
                                       FontSize="18"
                                       HorizontalOptions="Center"
                                       FontAttributes="Bold" />

                                <Label Text="{Binding Ativa, Converter={StaticResource BoolToAtivaInativaConverter}}"
                                       HorizontalOptions="Center"
                                       FontSize="18"                          
                                       TextColor="Red" />

                                <Grid ColumnSpacing="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Switch Grid.Column="0"
                                            IsToggled="{Binding Estado, Mode=TwoWay}"
                                            Toggled="OnLampadaToggled"/>
                                    <Button Grid.Column="1"
                                            Text="Excluir"
                                            BackgroundColor="#1c1c1c"
                                            TextColor="White"
                                            WidthRequest="80"
                                            HeightRequest="40"
                                            CornerRadius="40"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type local:InicialPageViewModel}}, Path=ExcluirCommand}"
                                            CommandParameter="{Binding .}"/>
                                </Grid>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
