<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IluminucaoAutomaticaApp.Views.Componentes.CabecalhoView">

    <Grid BackgroundColor="#abd9f4"
          Padding="10"
          HeightRequest="60"
          VerticalOptions="Start">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button Text="≡"
            FontSize="30"
            BackgroundColor="Transparent"
            TextColor="Black"
            Clicked="OnMenuClicked"
            Padding="0"
            WidthRequest="40"
            HeightRequest="40"
            VerticalOptions="Center"
            AbsoluteLayout.LayoutBounds="10,0.5,40,40"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            />

        <Button Grid.Column="1"
               Text="Sistema de Iluminação Automática"
               BackgroundColor="Transparent"
               TextColor="Black"
               FontAttributes="Bold"
               Clicked="OnTituloClicked"
               FontSize="18"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               AbsoluteLayout.LayoutBounds="0.5,0.5,1,40"
               AbsoluteLayout.LayoutFlags="All"/>
    </Grid>
</ContentView>

