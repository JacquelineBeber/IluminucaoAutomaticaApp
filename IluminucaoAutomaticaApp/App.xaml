<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IluminucaoAutomaticaApp"
             xmlns:converters="clr-namespace:IluminucaoAutomaticaApp.Converters"
             x:Class="IluminucaoAutomaticaApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Color x:Key="Primary">#512BD4</Color>

            <Style TargetType="Button">
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="Padding" Value="15,10"/>
            </Style>

            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="OpenSansRegular"/>
            </Style>
            <converters:BoolToAtivaInativaConverter x:Key="BoolToAtivaInativaConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>